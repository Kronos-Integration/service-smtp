{
  "name": "service-smtp",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "{{main}}"
  },
  "description": "SMTP for kronos",
  "keywords": [
    "kronos-service"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "--overwrite-- c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "docs": "documentation readme {{main}} --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint {{main}}"
  },
  "devDependencies": {
    "semantic-release": "^17.3.0",
    "c8": "^7.3.5",
    "ava": "^3.13.0",
    "documentation": "github:arlac77/documentation"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/service-smtp.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-smtp/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-smtp#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-github-action",
      "arlac77/template-kronos-component"
    ]
  }
}