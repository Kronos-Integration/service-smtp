{
  "name": "@kronos-integration/service-smtp",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/service-smtp.mjs"
  },
  "description": "SMTP for kronos",
  "keywords": [
    "kronos-service"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "@kronos-integration/service": "^10.3.13",
    "model-attributes": "^4.1.8",
    "smtp-client": "^0.3.3"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.4.0",
    "documentation": "github:arlac77/documentation",
    "semantic-release": "^17.3.7"
  },
  "engines": {
    "node": ">=14.15.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/service-smtp.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-smtp/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-smtp#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-component"
    ]
  }
